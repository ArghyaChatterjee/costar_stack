<launch>

  <arg name="output" default="screen"/>
  <arg name="params" default="true"/>

  <!-- predicator core: test to determine if something has happened -->
  <node name="predicator_core" pkg="predicator_core" type="core.py" output="$(arg output)"/>

  <!-- bring up the parameter module so that we can send things to the core -->
  <node if="$(arg params)"
    name="predicator_params_node" pkg="predicator_params" type="predicator_params_node.py"
    output="$(arg output)"/>

</launch>
